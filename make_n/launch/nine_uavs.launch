<?xml version="1.0"?>
<launch>
    <!-- MAVROS posix SITL environment launch script -->
    <!-- 启动Gazebo环境和9架无人机: 包含MAVROS, PX4 SITL和飞行器生成 -->
    <!-- 飞行器模型和世界配置 -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/> <!-- 默认固定翼，启动时可指定为iris多旋翼 -->
    <arg name="world" default="$(find mavlink_sitl_gazebo)/worlds/empty.world"/>
    
    <!-- Gazebo仿真配置（关键修复：使用正确的Gazebo启动文件） -->
    <arg name="gui" default="true"/>      <!-- 是否显示Gazebo界面 -->
    <arg name="debug" default="false"/>   <!-- 是否启用调试模式 -->
    <arg name="verbose" default="false"/> <!-- 是否显示详细日志 -->
    <arg name="paused" default="false"/>  <!-- 启动时是否暂停仿真 -->
    
    <!-- 启动Gazebo空世界（使用ROS官方gazebo_ros包的empty_world.launch，支持上述参数） -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
    </include>

    <!-- 3x3方阵排列，每架无人机间隔3个单位（保留原配置，仅修复子文件引用） -->
    <!-- UAV0: (0, 0) -->
    <group ns="uav0">
        <arg name="ID" value="0"/>
        <arg name="fcu_url" default="udp://:14540@localhost:14580"/>
        <!-- 生成单个无人机（single_vehicle_spawn_sdf.launch仅负责生成模型，不处理Gazebo参数） -->
        <include file="/home/tuan/PX4-Autopilot/launch/single_vehicle_spawn_sdf.launch">
            <arg name="x" value="0"/>          <!-- X轴坐标 -->
            <arg name="y" value="0"/>          <!-- Y轴坐标 -->
            <arg name="z" value="0"/>          <!-- Z轴坐标（高度） -->
            <arg name="R" value="0"/>          <!-- 滚转角（弧度） -->
            <arg name="P" value="0"/>          <!-- 俯仰角（弧度） -->
            <arg name="Y" value="0"/>          <!-- 偏航角（弧度） -->
            <arg name="vehicle" value="$(arg vehicle)"/> <!-- 无人机模型 -->
            <arg name="mavlink_udp_port" value="14560"/> <!-- MAVLink UDP端口 -->
            <arg name="mavlink_tcp_port" value="4560"/> <!-- MAVLink TCP端口 -->
            <arg name="ID" value="$(arg ID)"/> <!-- 无人机ID -->
        </include>
        <!-- 启动MAVROS节点（建立ROS与无人机的通信） -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>     <!-- 不指定地面站（可根据需求添加） -->
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/> <!-- 系统ID（1~9） -->
            <arg name="tgt_component" value="1"/> <!-- 组件ID（固定为1） -->
        </include>
    </group>

    <!-- UAV1: (3, 0) -->
    <group ns="uav1">
        <arg name="ID" value="1"/>
        <arg name="fcu_url" default="udp://:14541@localhost:14581"/>
        <include file="/home/tuan/PX4-Autopilot/launch/single_vehicle_spawn_sdf.launch">
            <arg name="x" value="3"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14561"/>
            <arg name="mavlink_tcp_port" value="4561"/>
            <arg name="ID" value="$(arg ID)"/>
        </include>
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
            <arg name="tgt_component" value="1"/>
        </include>
    </group>

